# Folder hooks
folder-hook 'account.com.gmail.tonietto' 'source ~/.mutt/account.com.gmail.tonietto'
folder-hook 'account.net.kinghost.montacasa.gustavo.tonietto' 'source ~/.mutt/account.net.kinghost.montacasa.gustavo.tonietto'

# Macros for switching accounts
macro index <f2> '<sync-mailbox><refresh><enter-command>source ~/.mutt/account.com.gmail.tonietto<enter><change-folder>!<enter>'
macro index <f3> '<sync-mailbox><refresh><enter-command>source ~/.mutt/account.net.kinghost.montacasa.gustavo.tonietto<enter><change-folder>!<enter>'

# Default account
source ~/.mutt/account.com.gmail.tonietto

# Fetch mail shortcut
bind index G imap-fetch-mail

# Security
set move = no #Stop asking to move read messages to mbox!  
set imap_keepalive = 900  

# Sidebar
set sidebar_visible
set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"
set mail_check_stats
set sidebar_new_mail_only = no
bind index,pager \CP sidebar-prev # Ctrl-Shift-P - Previous Mailbox
bind index,pager \CN sidebar-next # Ctrl-Shift-N - Next Mailbox
bind index,pager \CO sidebar-open # Ctrl-Shift-O - Open Highlighted Mailbox
# sidebar_whitelist 

# Sorting
set sort = reverse-date

# Macros
macro index,pager A "<save-message>=mutt<enter>" "Archive Message"

# COLORS
#Amber Text on Black Background
color hdrdefault yellow black
color quoted yellow black
color signature yellow black
color status black yellow
color indicator black yellow
color normal yellow black

# Aliases
set alias_file= ~/.mutt/aliases
set sort_alias= alias
set reverse_alias=yes
source $alias_file 
