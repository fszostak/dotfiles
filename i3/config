# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# General {{{
# Font {{{
font pango:hack 8
# }}}

# Variables {{{
# use these keys for focus, movement, and resize directions when reaching for
# the arrows is not convenient
set $up k
set $down j
set $left h
set $right l

set $mod Mod4
# }}}
# }}}
# Keyboard and key bindings {{{
# Brightness, Music and Volume (pamixer, playerctl, etc) {{{
# Music keybindings
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# volume controls
bindsym XF86AudioRaiseVolume exec pamixer -i 10
bindsym XF86AudioLowerVolume exec pamixer -d 10
bindsym XF86AudioMute exec pamixer -t

# brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 # decrease screen brightness
# }}}
# Container Layouts {{{
# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
# set layout default splith
# }}}
# Compton {{{
# start and stop compton
set $compton allow_rgb10_configs=false compton -b --config $HOME/.config/compton.conf --blur-kern 11x11gaussian 
exec --no-startup-id $compton
bindsym $mod+control+shift+c exec killall compton
bindsym $mod+control+c exec $compton
# }}}
# Configuration File commands {{{
# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# }}}
# Conky {{{
# start and stop conky
exec --no-startup-id conky
bindsym $mod+control+shift+y exec killall conky
bindsym $mod+control+y exec conky
# }}}
# Dmenu (rofi) {{{
# start rofi as a dmenu replacement
bindsym $mod+d exec rofi -show 
bindsym $mod+Tab exec rofi -modi window -show 
bindsym $mod+x exec rofi-pass
# }}}
# Drag Floats {{{
# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
# }}}
# Exit, Lock and Suspend (xautolock, i3lock, etc) {{{
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -f hack -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
# lock screen
bindsym $mod+shift+x exec xautolock -locknow

# lock and suspend
bindsym $mod+shift+BackSpace exec $HOME/.i3/i3lock.sh && sleep 0.1 && systemctl suspend

# autolock 
exec_always --no-startup-id xautolock -time 5 -locker $HOME/.i3/i3lock.sh -notify 30 -notifier "notify-send -t 3000 Warning 'Locking screen in 30 seconds'" -killtime 30 -killer "systemctl suspend"
# }}}
# Focus {{{
# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+c focus child
# }}}
# Gaps control {{{
