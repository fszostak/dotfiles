# Keyboard Layout {{{
# shortcut to set keymap to abnt2 br
bindsym $mod+Shift+b exec setxkbmap -model abnt2 -layout br -model abnt2

# shortcut to set keymap to us
bindsym $mod+Shift+u exec setxkbmap -layout us -option compose:ralt 

# shortcut to set keymap to dvorak
bindsym $mod+Shift+d exec setxkbmap -layout dvorak -option compose:ralt 

# set keymap to us
exec --no-startup-id setxkbmap --layout us -option compose:ralt

# }}}
# Kill Focused Window {{{
bindsym $mod+Shift+q kill
# }}}
# Mouse cursor {{{
#  (mod1 = alt)

# left and right max
bindsym $mod+shift+control+h exec xdotool mousemove_relative -- -500 0
bindsym $mod+shift+control+l exec xdotool mousemove_relative 500 0

# up and down max
bindsym $mod+shift+control+j exec xdotool mousemove_relative 0 500
bindsym $mod+shift+control+k exec xdotool mousemove_relative -- 0 -500

# left and right medium
bindsym $mod+control+h exec xdotool mousemove_relative -- -100 0
bindsym $mod+control+l exec xdotool mousemove_relative 100 0

# up and down medium
bindsym $mod+control+j exec xdotool mousemove_relative 0 100
bindsym $mod+control+k exec xdotool mousemove_relative -- 0 -100

# left and right min
bindsym $mod+control+mod1+h exec xdotool mousemove_relative -- -10 0
bindsym $mod+control+mod1+l exec xdotool mousemove_relative 10 0

# up and down min
bindsym $mod+control+mod1+j exec xdotool mousemove_relative 0 10
bindsym $mod+control+mod1+k exec xdotool mousemove_relative -- 0 -10

# clicks
bindsym $mod+control+Return exec xdotool click 1          # left click
bindsym $mod+control+mod1+Return exec xdotool click 2     # middle click
bindsym $mod+control+Space exec xdotool click 3           # right click

# click and hold
bindsym $mod+mod1+Return exec xdotool mousedown 1         # hold left click
bindsym $mod+mod1+shift+Return exec xdotool mouseup 1     # release left click

# wheel
bindsym $mod+mod1+k exec xdotool click --clearmodifiers 4 # wheel up
bindsym $mod+mod1+j exec xdotool click --clearmodifiers 5 # wheel down
# }}}
# Pomodoro {{{
# stop a pomodoro
bindsym $mod+Shift+p exec rm ~/.pomodoro_session

# change pomodoro time
bindsym $mod+control+p exec echo "$((`cut .pomodoro_session -d ' ' -f 1`+5)) 5" > .pomodoro_session
bindsym $mod+control+shift+p exec echo "$((`cut .pomodoro_session -d ' ' -f 1`-5)) 5" > .pomodoro_session

# start/reset a pomodoro
bindsym $mod+p exec echo 25 5 > ~/.pomodoro_session
# }}}
# Scratchpad {{{
# move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show
# }}}
# Screenshots with scrot {{{
# print active window (wait 1 secs)
bindsym $mod+mod1+3 exec scrot -d1 -c -u -e 'mv $f ~/Pictures/scrot/' && notify-send scrot "Screenshot taken to ~/Pictures/scrot/"
# }}}
# Redshift {{{
# start redshit in normal configuration
bindsym $mod+t exec kill $(ps -A | grep 'redshift' | awk '{print $1}') && sleep 5 && redshift -c $HOME/.config/redshift.conf

# start redshit in darker configuration
bindsym $mod+shift+t exec kill $(ps -A | grep 'redshift' | awk '{print $1}') && sleep 5 && redshift -c $HOME/.config/redshift-darker.conf
# }}}
# Splits {{{
# split in horizontal orientation
bindsym $mod+control+b split h

# split in vertical orientation
bindsym $mod+control+v split v
# }}}
# Start a qutebrowser {{{
bindsym $mod+shift+Return exec qutebrowser
# }}}
# Start a Terminal {{{
bindsym $mod+Return exec kitty
# bindsym $mod+Return exec termite
# }}}
# Touchpad {{{
# no touchpad while typing
bindsym $mod+control+t exec syndaemon -i 1
bindsym $mod+control+shift+t exec killall syndaemon
# }}}
# }}}
# Applications {{{
# Bar (polybar) {{{
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
# }}}
# Calcurse {{{
exec --no-startup-id calcurse --daemon
# }}}
# Notifications (dunst) {{{
# disable bell
exec xset -b

# start notification application
exec_always --no-startup-id dunst
# }}}
# Redshift {{{
# start redshit
exec --no-startup-id redshift -c $HOME/.config/redshift.conf
# }}}
# xbanish (hide cursor while typing) {{{
exec --no-startup-id xbanish
# }}}
# Wallpaper (feh) {{{
# set wallpaper
exec_always --no-startup-id feh --bg-scale $HOME/.wallpaper.jpg
# }}}
# }}}
# General UI {{{
# Borders {{{
for_window [class="^.*"] border pixel 2
# }}}
# Resize window (you can also use the mouse for that) {{{
mode "resize" {
  # These bindings trigger as soon as you enter the resize mode

  # Pressing left will shrink the window’s width.
  # Pressing right will grow the window’s width.
  # Pressing up will shrink the window’s height.
  # Pressing down will grow the window’s height.
  bindsym $left       resize shrink width 10 px or 10 ppt
  bindsym $down       resize grow height 10 px or 10 ppt
  bindsym $up         resize shrink height 10 px or 10 ppt
  bindsym $right      resize grow width 10 px or 10 ppt

  # same bindings, but for the arrow keys
  bindsym Left        resize shrink width 10 px or 10 ppt
  bindsym Down        resize grow height 10 px or 10 ppt
  bindsym Up          resize shrink height 10 px or 10 ppt
  bindsym Right       resize grow width 10 px or 10 ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

# resize
bindsym $mod+r mode "resize"
# }}}
# Gaps {{{
# gaps outer 2
# gaps inner 4
# }}}       
# Colors {{{
set $inactive      #2F343F
set $focused       #B45BCF
set $text          #F8F8F8
set $text-inactive #4D4D4D

# class                 border    backgr.   text           indicator child_border
client.focused          $focused  $focused  $text          $focused  $focused
client.unfocused        $inactive $inactive $text-inactive $inactive $inactive
client.focused_inactive $inactive $inactive $text-inactive $inactive $inactive
client.urgent           $inactive $inactive $text          $inactive $inactive
# }}}
# Disable all window and float borders {{{
new_window none
new_float none
# }}}
# }}}
# Workspaces {{{
# create variables {{{
set $w1 1
set $w2 2
set $w3 3
set $w4 4
set $w5 5
set $w6 6
set $w7 7
set $w8 8
set $w9 9
set $w10 10
# }}}
# switch to workspace {{{
bindsym $mod+1 workspace $w1
bindsym $mod+2 workspace $w2
bindsym $mod+3 workspace $w3
bindsym $mod+4 workspace $w4
bindsym $mod+5 workspace $w5
bindsym $mod+6 workspace $w6
bindsym $mod+7 workspace $w7
bindsym $mod+8 workspace $w8
bindsym $mod+9 workspace $w9
bindsym $mod+0 workspace $w10
# }}}
# move focused container to workspace {{{
bindsym $mod+Shift+1 move container to workspace $w1
bindsym $mod+Shift+2 move container to workspace $w2
bindsym $mod+Shift+3 move container to workspace $w3
bindsym $mod+Shift+4 move container to workspace $w4
bindsym $mod+Shift+5 move container to workspace $w5
bindsym $mod+Shift+6 move container to workspace $w6
bindsym $mod+Shift+7 move container to workspace $w7
bindsym $mod+Shift+8 move container to workspace $w8
bindsym $mod+Shift+9 move container to workspace $w9
bindsym $mod+Shift+0 move container to workspace $w10
# }}}
# assign clients to workspaces{{{
assign [class="Chromium"] $w3
assign [class="cool-retro-term"] $w1
assign [class="Evince"] $w1
assign [class="Firefox"] $w4
assign [class="Dwarf_Fortress"] $w6
assign [class="Minecraft"] $w6
assign [class="Postman"] $w5
assign [class="qutebrowser"] $w2
assign [class="Slack"] $w9
assign [class="(?s)team"] $w6
assign [class="Termite"] $w1
assign [class="kitty"] $w1
assign [class="URxvt"] $w1
