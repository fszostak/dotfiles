# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# Font {{{
font pango:hack 8
# }}}

# Variables {{{
# use these keys for focus, movement, and resize directions when reaching for
# the arrows is not convenient
set $up k
set $down j
set $left h
set $right l

set $mod Mod4
# }}}

# Keyboard and key bindings {{{

# Brightness, Music and Volume (pamixer, playerctl, etc) {{{
# Music keybindings
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# volume controls
bindsym XF86AudioRaiseVolume exec pamixer -i 10
bindsym XF86AudioLowerVolume exec pamixer -d 10
bindsym XF86AudioMute exec pamixer -t

# brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 # decrease screen brightness
# }}}

# Container Layouts {{{
# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
# set layout default splith
# }}}

# Compton {{{
# start and stop compton
set $compton compton -b --config $HOME/.config/compton.conf --blur-kern 11x11gaussian 
exec --no-startup-id $compton
bindsym $mod+control+shift+c exec killall compton
bindsym $mod+control+c exec $compton
# }}}

# Configuration File commands {{{
# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# }}}

# Conky {{{
# start and stop conky
exec --no-startup-id conky
bindsym $mod+control+shift+k exec killall conky
bindsym $mod+control+k exec conky
# }}}

# Dmenu (rofi) {{{
# start rofi as a dmenu replacement
bindsym $mod+d exec rofi -show 
bindsym $mod+Tab exec rofi -modi window -show 
bindsym $mod+x exec rofi-pass
# }}}

# Drag Floats {{{
# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
# }}}

# Exit, Lock and Suspend (xautolock, i3lock, etc) {{{
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -f hack -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
# lock screen
bindsym $mod+shift+x exec xautolock -locknow

# lock and suspend
bindsym $mod+shift+BackSpace exec $HOME/.i3/i3lock.sh && sleep 0.1 && systemctl suspend

# autolock 
exec_always --no-startup-id xautolock -time 5 -locker $HOME/.i3/i3lock.sh -notify 30 -notifier "notify-send -u critical -t 5000 -- 'Locking screen in 30 seconds'" -killtime 15 -killer "systemctl suspend"
# }}}

# Focus {{{
# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+c focus child
# }}}

# Gaps control {{{
set $mode_gaps Gaps: (o) outer, (i) inner
set $mode_gaps_outer Outer Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_inner Inner Gaps: +|-|0 (local), Shift + +|-|0 (global)
bindsym $mod+Shift+g mode "$mode_gaps"

mode "$mode_gaps" {
  bindsym o      mode "$mode_gaps_outer"
  bindsym i      mode "$mode_gaps_inner"
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

mode "$mode_gaps_inner" {
  bindsym plus  gaps inner current plus 5
  bindsym minus gaps inner current minus 5
  bindsym 0     gaps inner current set 0

  bindsym Shift+plus  gaps inner all plus 5
  bindsym Shift+minus gaps inner all minus 5
  bindsym Shift+0     gaps inner all set 0

  bindsym Return mode "default"
  bindsym Escape mode "default"
}
mode "$mode_gaps_outer" {
  bindsym plus  gaps outer current plus 5
  bindsym minus gaps outer current minus 5
  bindsym 0     gaps outer current set 0

  bindsym Shift+plus  gaps outer all plus 5
  bindsym Shift+minus gaps outer all minus 5
  bindsym Shift+0     gaps outer all set 0

  bindsym Return mode "default"
  bindsym Escape mode "default"
}
# }}}

# Keyboard Layout {{{
# shortcut to set keymap to abnt2 br
bindsym $mod+Shift+b exec setxkbmap -model abnt2 -layout br -model abnt2

# shortcut to set keymap to us
bindsym $mod+Shift+u exec setxkbmap -layout us -option compose:ralt 

# set keymap to us
exec --no-startup-id setxkbmap --layout us -option compose:ralt
# }}}

# Kill Focused Window {{{
bindsym $mod+Shift+q kill
# }}}

# Pomodoro {{{
# stop a pomodoro
bindsym $mod+Shift+p exec rm ~/.pomodoro_session

# change pomodoro time
bindsym $mod+control+p exec echo "$((`cut .pomodoro_session -d ' ' -f 1`+5)) 5" > .pomodoro_session
bindsym $mod+control+shift+p exec echo "$((`cut .pomodoro_session -d ' ' -f 1`-5)) 5" > .pomodoro_session

# start/reset a pomodoro
bindsym $mod+p exec echo 25 5 > ~/.pomodoro_session
# }}}

# Scratchpad {{{
# move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show
# }}}

# Splits {{{
# split in horizontal orientation
bindsym $mod+control+h split h

# split in vertical orientation
bindsym $mod+control+v split v
# }}}

# Start a qutebrowser {{{
bindsym $mod+shift+Return exec qutebrowser
# }}}

# Start a Terminal {{{
bindsym $mod+Return exec termite
# }}}

# Start a Urxvt {{{
bindsym $mod+control+Return exec urxvt
# }}}

# Touchpad {{{
# no touchpad while typing
bindsym $mod+control+t exec syndaemon -i 0.5
bindsym $mod+control+shift+t exec killall syndaemon
# }}}
# }}}

# Applications {{{
# Bar (polybar) {{{
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
# }}}

# Notifications (dunst) {{{
# disable bell
exec xset -b

# start notification application
exec_always --no-startup-id dunst
# }}}

# Redshift {{{
# start redshit
exec --no-startup-id redshift -c $HOME/.config/redshift.conf
# }}}

# xbanish (hide cursor while typing) {{{
exec --no-startup-id xbanish
# }}}

# Wallpaper (feh) {{{
# set wallpaper
exec_always --no-startup-id feh --bg-scale $HOME/.wallpaper.jpg
# }}}
# }}}

# UI {{{
# Resize window (you can also use the mouse for that) {{{
mode "resize" {
  # These bindings trigger as soon as you enter the resize mode

  # Pressing left will shrink the window’s width.
  # Pressing right will grow the window’s width.
  # Pressing up will shrink the window’s height.
  # Pressing down will grow the window’s height.
  bindsym $left       resize shrink width 10 px or 10 ppt
  bindsym $down       resize grow height 10 px or 10 ppt
  bindsym $up         resize shrink height 10 px or 10 ppt
  bindsym $right      resize grow width 10 px or 10 ppt

  # same bindings, but for the arrow keys
  bindsym Left        resize shrink width 10 px or 10 ppt
  bindsym Down        resize grow height 10 px or 10 ppt
  bindsym Up          resize shrink height 10 px or 10 ppt
  bindsym Right       resize grow width 10 px or 10 ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

# resize
bindsym $mod+r mode "resize"
# }}}

# Gaps {{{
gaps outer 2
gaps inner 4
smart_gaps on
# }}}

# Colors {{{
set $bg-color 	         #2f343f
set $inactive-bg-color   #2f343f
set $text-color          #f8f8f2
set $inactive-text-color #4D4D4D
set $urgent-bg-color     #FF5555
set $separator		 #757575
# }}}

# Disable all window and float borders {{{
new_window none
new_float none
# }}}
# }}}

# Workspaces {{{
set $w1 1
set $w2 2
set $w3 3
set $w4 4
set $w5 5
set $w6 6
set $w7 7
set $w8 8
set $w9 9
set $w10 10

# switch to workspace
bindsym $mod+1 workspace $w1
bindsym $mod+2 workspace $w2
bindsym $mod+3 workspace $w3
bindsym $mod+4 workspace $w4
bindsym $mod+5 workspace $w5
bindsym $mod+6 workspace $w6
bindsym $mod+7 workspace $w7
bindsym $mod+8 workspace $w8
bindsym $mod+9 workspace $w9
bindsym $mod+0 workspace $w10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $w1
bindsym $mod+Shift+2 move container to workspace $w2
bindsym $mod+Shift+3 move container to workspace $w3
bindsym $mod+Shift+4 move container to workspace $w4
bindsym $mod+Shift+5 move container to workspace $w5
bindsym $mod+Shift+6 move container to workspace $w6
bindsym $mod+Shift+7 move container to workspace $w7
bindsym $mod+Shift+8 move container to workspace $w8
bindsym $mod+Shift+9 move container to workspace $w9
bindsym $mod+Shift+0 move container to workspace $w10

# assign clients to workspaces
assign [class="Termite"] $w1
assign [class="Evince"] $w1
assign [class="cool-retro-term"] $w1
assign [class="qutebrowser"] $w2
assign [class="Chromium"] $w3
assign [class="Firefox"] $w3
assign [class="Postman"] $w4
assign [class="GitKraken"] $w5
assign [class="(?s)team"] $w6
assign [class="Minecraft"] $w6
assign [title="(?i)rambox"] $w8
assign [class="Slack"] $w9
assign [title="(?i)spotify"] $w10
assign [class="URxvt"] $w10

# assign all other clients to default workspace
assign [class="$"] $w7
# }}}

# Window layouts {{{
# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# sticky window
bindsym $mod+Shift+s sticky toggle

for_window [class="Blueberry.py"] sticky enable

# floating
for_window [class="Blueberry.py"] floating enable
for_window [class="Pavucontrol"] floating enable
for_window [class="Lxappearance"] floating enable
for_window [class="Steam"] floating enable
# }}}

